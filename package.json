{
  "private": true,
  "scripts": {
    "format": "prettier src/**/*.{js,ts} *.{html,css,md,json} --write"
  },
  "devDependencies": {
    "prettier": "^1.19.1",
    "serve": "^11.3.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
}
